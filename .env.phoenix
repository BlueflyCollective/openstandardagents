# Global Phoenix Configuration for All LLM Projects
# Unified telemetry and cost optimization across the entire ecosystem

# Phoenix Core Settings
PHOENIX_ENABLED=true
PHOENIX_ENDPOINT=https://phoenix.agent-buildkit.orb.local
PHOENIX_TELEMETRY=true
PHOENIX_COST_OPTIMIZATION=true

# OTLP Configuration
PHOENIX_OTLP_ENDPOINT=https://phoenix.agent-buildkit.orb.local/v1/traces
PHOENIX_OTLP_TIMEOUT=30000
OTEL_EXPORTER_OTLP_ENDPOINT=https://phoenix.agent-buildkit.orb.local/v1/traces
OTEL_SERVICE_NAME=OSSA

# Evaluation Settings
PHOENIX_EVALUATION_ENABLED=true
PHOENIX_HALLUCINATION_MODEL=gpt-4
PHOENIX_RELEVANCE_MODEL=gpt-4
PHOENIX_TOXICITY_MODEL=gpt-3.5-turbo
PHOENIX_SUMMARIZATION_MODEL=gpt-4

# Thresholds (optimized for enterprise use)
PHOENIX_HALLUCINATION_THRESHOLD=0.7
PHOENIX_RELEVANCE_THRESHOLD=0.8
PHOENIX_TOXICITY_THRESHOLD=0.3
PHOENIX_SUMMARIZATION_THRESHOLD=0.7
PHOENIX_EVALUATION_BATCH_SIZE=10
PHOENIX_EVALUATION_TIMEOUT=60000

# Dataset Collection (aggressive rebuild mode)
PHOENIX_DATASET_AUTO_COLLECT=true
PHOENIX_DATASET_MAX_SIZE=50000
PHOENIX_DATASET_MIN_DURATION=50
PHOENIX_DATASET_REQUIRED_ATTRIBUTES=llm.provider,llm.model,llm.tokens.input,llm.tokens.output,cost.total,project.name
PHOENIX_DATASET_EXCLUDE_SPANS=health-check,ping,heartbeat

# Experiment Tracking
PHOENIX_EXPERIMENTS_ENABLED=true
PHOENIX_EXPERIMENTS_AUTO_CREATE=true

# Token Optimization (BuildKit integration)
TOKEN_OPTIMIZATION=true
BUILDKIT_PHOENIX_INTEGRATION=true
COST_TRACKING_ENABLED=true

# Agent-specific metrics
AGENT_METRICS_ENABLED=true
AGENT_PERFORMANCE_TRACKING=true
MANUAL_CODING_PREVENTION_TRACKING=truePHOENIX_PROJECT_NAME=OSSA
