{
  "vulnerability_patterns": {
    "sql_injection": {
      "patterns": [
        "\\bEXEC\\s*\\(",
        "\\bexec\\s*\\(",
        "query\\s*\\+\\s*\\w+",
        "SELECT\\s+.*\\s*\\+\\s*\\w+"
      ],
      "severity": "critical",
      "cwe": "CWE-89",
      "owasp": "A03:2021 – Injection"
    },
    "xss": {
      "patterns": [
        "innerHTML\\s*=\\s*\\w+",
        "document\\.write\\s*\\(",
        "eval\\s*\\(",
        "dangerouslySetInnerHTML"
      ],
      "severity": "high",
      "cwe": "CWE-79",
      "owasp": "A03:2021 – Injection"
    },
    "hardcoded_secrets": {
      "patterns": [
        "password\\s*=\\s*[\"'][^\"']{8,}[\"']",
        "api[_-]?key\\s*=\\s*[\"'][^\"']{20,}[\"']",
        "secret\\s*=\\s*[\"'][^\"']{16,}[\"']",
        "token\\s*=\\s*[\"'][^\"']{32,}[\"']"
      ],
      "severity": "critical",
      "cwe": "CWE-798",
      "owasp": "A07:2021 – Identification and Authentication Failures"
    },
    "path_traversal": {
      "patterns": [
        "\\.\\.\\/",
        "\\.\\.\\\\",
        "path\\.join\\([^)]*\\.\\.[^)]*\\)"
      ],
      "severity": "high",
      "cwe": "CWE-22",
      "owasp": "A01:2021 – Broken Access Control"
    }
  },
  "security_headers": {
    "required_headers": [
      "Content-Security-Policy",
      "X-Content-Type-Options",
      "X-Frame-Options",
      "Strict-Transport-Security"
    ]
  },
  "dependency_security": {
    "known_vulnerable_packages": {
      "lodash": ["<4.17.21"],
      "axios": ["<0.21.1"],
      "express": ["<4.17.1"]
    }
  }
}