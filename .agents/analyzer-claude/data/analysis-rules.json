{
  "code_quality_rules": {
    "javascript": [
      {
        "id": "no-var",
        "description": "Use let or const instead of var",
        "severity": "medium",
        "pattern": "\\bvar\\s+\\w+",
        "suggestion": "Replace with 'let' or 'const' for block scoping"
      },
      {
        "id": "no-console",
        "description": "Remove console statements in production",
        "severity": "low",
        "pattern": "console\\.(log|error|warn|info)",
        "suggestion": "Use proper logging framework instead"
      }
    ],
    "typescript": [
      {
        "id": "explicit-return-type",
        "description": "Functions should have explicit return types",
        "severity": "medium",
        "pattern": "function\\s+\\w+\\([^)]*\\)\\s*{",
        "suggestion": "Add explicit return type annotation"
      }
    ],
    "python": [
      {
        "id": "snake-case",
        "description": "Use snake_case for variable names",
        "severity": "low",
        "pattern": "\\b[a-z]+[A-Z]",
        "suggestion": "Convert to snake_case naming convention"
      }
    ]
  },
  "complexity_thresholds": {
    "cyclomatic_complexity": {
      "low": 5,
      "medium": 10,
      "high": 15,
      "critical": 20
    },
    "cognitive_complexity": {
      "low": 5,
      "medium": 10,
      "high": 15,
      "critical": 25
    }
  },
  "maintainability_criteria": {
    "min_maintainability_index": 20,
    "max_lines_per_function": 50,
    "max_parameters": 5,
    "min_test_coverage": 80
  }
}