{
  "name": "@openapi-ai-agents/validators",
  "version": "1.0.0",
  "description": "Validation tools for OpenAPI AI Agents Standard",
  "main": "index.js",
  "scripts": {
    "validate": "node openapi-validator.js",
    "validate:agent": "node agent-config-validator.js",
    "validate:compliance": "node compliance-validator.js",
    "validate:protocol": "node protocol-validator.js",
    "estimate:tokens": "node token-estimator.js",
    "validate:all": "npm run validate && npm run validate:agent && npm run validate:compliance && npm run validate:protocol",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "bin": {
    "openapi-agent-validate": "./openapi-validator.js",
    "agent-config-validate": "./agent-config-validator.js",
    "compliance-validate": "./compliance-validator.js",
    "protocol-validate": "./protocol-validator.js",
    "token-estimate": "./token-estimator.js"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "js-yaml": "^4.1.0",
    "chalk": "^4.1.2",
    "tiktoken": "^1.0.10"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "keywords": [
    "openapi",
    "ai-agents",
    "validation",
    "compliance",
    "standards"
  ],
  "author": "OpenAPI AI Agents Consortium",
  "license": "MIT"
}