{
  "name": "@bluefly/open-standards-scalable-agents",
  "version": "0.1.8",
  "description": "Open Standards for Scalable Agents (OSSA) - Research-enhanced specification for universal AI agent interoperability with ACTA and memory systems integration",
  "main": "lib/cli.js",
  "type": "module",
  "bin": {
    "ossa": "bin/ossa",
    "ossa-validate": "lib/tools/validation/validate-ossa.js",
    "ossa-langchain": "lib/integrations/langchain/langchain-cli.js"
  },
  "scripts": {
    "validate": "node lib/cli.js",
    "validate:legacy": "node lib/tools/validation/validate-ossa-v0.1.2.js",
    "test": "npm run validate examples/01-agent-basic-ossa-v0.1.2.yml",
    "mcp-server": "node lib/mcp/servers/ossa-validator.js",
    "test-mcp": "node -e \"import('./lib/mcp/servers/ossa-validator.js').then(() => console.log('MCP server loaded successfully'))\"",
    "lint": "echo 'No linting configured'",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf {} +",
    "build": "echo \"OSSA package ready for publication\"",
    "version:patch": "npm version patch --no-git-tag-version"
  },
  "keywords": [
    "ossa",
    "open-standards",
    "ai-agents",
    "agent-interoperability",
    "vendor-neutral",
    "conformance",
    "governance",
    "mcp",
    "langchain",
    "crewai",
    "openai",
    "anthropic",
    "agent-orchestration",
    "kubernetes-for-ai"
  ],
  "author": "Open Standards for Scalable Agents Community",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/bluefly-ai/ossa-standard.git"
  },
  "homepage": "https://gitlab.com/bluefly-ai/ossa-standard#readme",
  "bugs": {
    "url": "https://gitlab.com/bluefly-ai/ossa-standard/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/",
    "lib/",
    "schemas/",
    "examples/",
    "conformance/",
    "tools/",
    "tests/",
    "docs/",
    "validate-ossa-v0.1.2.js",
    "validate-oaas-v1.2.0.js",
    "validate-oaas-v1.3.0.js",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "ROADMAP.md"
  ],
  "dependencies": {
    "@anthropic-ai/dxt": "^0.2.6",
    "@langchain/anthropic": "^0.3.26",
    "@langchain/community": "^0.3.54",
    "@langchain/core": "^0.3.73",
    "@langchain/openai": "^0.6.11",
    "axios": "^1.11.0",
    "express": "^5.1.0",
    "glob": "^10.4.5",
    "js-yaml": "^4.1.0",
    "langchain": "^0.3.32",
    "yaml": "^2.8.1"
  }
}
